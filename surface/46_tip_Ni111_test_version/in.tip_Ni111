# REAX potential for high energy tip_Ni111 systems
# Title

# Intialization
units		real
dimension	3
boundary	p p p
atom_style	charge

# Atom Definition
read_data	data.tip_Ni111
replicate	1 1 1

# Mass Definition
mass 1 58.6934  # Ni
mass 2 12.0107  # C
mass 3  1.00794 # H

# Potential Definition
pair_style	reax/c lmp_control
pair_coeff	* * ffield.reax.046.CHONi_remove_O33_3rd Ni C H

neighbor	2 bin
neigh_modify	every 10 delay 0 check no

# output
thermo_style    one #custom step etotal temp lx vol press
thermo          100

# relax structure, 0 K
fix				f1 all qeq/reax 1 0.0 10.0 1e-6 reax/c
fix             f2 all box/relax iso 0.0
minimize        1.0e-10 0.0 1000 100000
unfix           f1
unfix           f2

reset_timestep 	0

# initial velocity settings
velocity       all create 300.0 4928459 rot yes mom yes dist gaussian

# berendsen thermostat (from 300.0 K to 300.0 K)
fix		1 all nve
fix		2 all qeq/reax 1 0.0 10.0 1e-6 reax/c
fix		3 all temp/berendsen 300.0 300.0 500.0

#fix		4 all reax/c/bonds 100 bonds.reaxc
#fix		5 all reax/c/species 100 1 100 species.reaxc

timestep	0.25 # 0.25 fs

# ovito settings
dump		d1 all cfg 100 cfg/run.*.cfg mass type xs ys zs id type q
dump_modify	d1 element Ni C H

# gnuplot settings
variable	energy equal etotal
variable	temperature equal temp
fix			fout1 all ave/time 1 100 100 v_energy v_temperature file out_energy.txt

group	group_tip type 2:3

# real unit: force = Kcal/mole-Angstrom
# 69.4786 pN = 1 kcal/mol Angstrom
# 1 Kcal/mole = 43.36 meV
variable impact_acceleration equal -1/(43.36/1000)/10*1000*0.1 # -0.1 keV / 10 Angstrom
fix		6 group_tip  addforce 0.0 0.0 v_impact_acceleration # test case

run			0
unfix 6

# Run the simulation
run			32000 # 0.25 * 32000 = 8 ps

# real unit: force = Kcal/mole-Angstrom
# 69.4786 pN = 1 kcal/mol Angstrom
# 1 Kcal/mole = 43.36 meV
variable impact_decelerate   equal  1/(43.36/1000)/10*1000*0.1 #  0.1 keV / 10 Angstrom
fix		6 group_gas  addforce 0.0 0.0 v_impact_decelerate # test case
run			0
unfix 6

# Run the simulation
run			32000 # 0.25 * 32000 = 8 ps
